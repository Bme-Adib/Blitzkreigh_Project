                                 <children>
                                    <Button contentDisplay="TOP" graphicTextGap="0.0" mnemonicParsing="false" onMouseClicked="#bladderTrainingFunction" prefHeight="300.0" prefWidth="300.0" styleClass="selectTrainingButton" text="Bladder Training">
